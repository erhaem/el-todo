<%= form_with model: @todo do |f| %>
  <% if @todo.errors.any? %>
    <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.check_box :status %>
  </div>

  <%= f.submit %>
<% end %>
